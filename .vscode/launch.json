  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Webpack DEV (firefox)",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.webpack.json",
        "NODE_ENV": "development",
        "TARGET_VENDOR": "firefox"
      },
      "program": "${workspaceFolder}/node_modules/webpack-cli/bin/cli.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Webpack PROD (firefox)",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.webpack.json",
        "NODE_ENV": "production",
        "TARGET_VENDOR": "firefox"
      },
      "program": "${workspaceFolder}/node_modules/webpack-cli/bin/cli.js"
    }
  ]
}
