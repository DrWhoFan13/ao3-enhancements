  "scripts": {
    "build:dev": "rm -rf build && NODE_ENV=development webpack --progress --hide-modules --config webpack.dev.js",
    "build:prod": "rm -rf build && NODE_ENV=production webpack --progress --hide-modules --config webpack.prod.js",
    "watch": "npm run build:dev -- --watch",
    "start:firefox": "web-ext run",
    "start:devtools": "concurrently \"mitmdump -p 8099 --mode reverse:http://localhost:8098/\" \"vue-devtools\""
  },
  "author": "jsmnbom",
  "license": "MIT",
  "webExt": {
    "sourceDir": "./build/",
    "verbose": true,
    "run": {
      "firefox": "firefox-developer-edition",
      "firefoxProfile": "development",
      "keepProfileChanges": true,
      "startUrl": [
        "https://archiveofourown.org/",
        "about:debugging#/runtime/this-firefox",
        "about:addons"
      ]
    }
  }
