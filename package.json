{
  "name": "ao3-enhancements",
  "type": "module",
  "version": "0.5.0-alpha.1",
  "private": true,
  "description": "Firefox webextension: Various tweaks and enhancements for ArchiveOfOurOwn.org",
  "imports": {
    "#dom": "./src/common/dom.js",
    "#common": "./src/common/index.js",
    "#img/*": "./src/img/*",
    "#icons/*": "./src/icons/*",
    "#content_script/*": "./src/content_script/*"
  },
  "author": "jsmnbom",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build",
    "build": "bun run build:prod:firefox && bun run build:prod:chrome",
    "dist": "bun run dist:firefox && bun run dist:chrome",
    "build:dev:firefox": "BROWSER=firefox NODE_ENV=development bun scripts/builder/build.ts build",
    "build:prod:firefox": "BROWSER=firefox NODE_ENV=production bun scripts/builder/build.ts build",
    "serve:dev:firefox": "BROWSER=firefox NODE_ENV=development bun scripts/builder/build.ts serve",
    "serve:prod:firefox": "BROWSER=firefox NODE_ENV=production bun scripts/builder/build.ts serve",
    "start:firefox": "web-ext --config=web-ext.firefox.cjs run",
    "dist:firefox": "web-ext --config=web-ext.firefox.cjs build",
    "build:dev:chrome": "BROWSER=chrome NODE_ENV=development bun scripts/builder/build.ts build",
    "build:prod:chrome": "BROWSER=chrome NODE_ENV=production bun scripts/builder/build.ts build",
    "serve:dev:chrome": "BROWSER=chrome NODE_ENV=development bun scripts/builder/build.ts serve",
    "serve:prod:chrome": "BROWSER=chrome NODE_ENV=production bun scripts/builder/build.ts serve",
    "start:chrome": "web-ext --config=web-ext.chrome.cjs run",
    "dist:chrome": "web-ext --config=web-ext.chrome.cjs build"
  },
  "dependencies": {
    "@antfu/utils": "^0.7.7",
    "@iconify/json": "^2.2.197",
    "@tanstack/vue-table": "^8.15.3",
    "@vueuse/core": "^10.9.0",
    "change-case": "^5.4.4",
    "radix-vue": "^1.7.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.12.2",
    "@types/bun": "^1.0.12",
    "@types/firefox-webext-browser": "^120.0.3",
    "@unocss/eslint-plugin": "^0.59.2",
    "@unocss/rule-utils": "^0.59.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/devtools": "^7.0.27",
    "@vue/reactivity": "^3.4.21",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "dot-prop": "^8.0.2",
    "esbuild": "^0.20.2",
    "escape-string-regexp": "^5.0.0",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-format": "^0.1.0",
    "nanoid": "^5.0.7",
    "parse5": "^7.1.2",
    "preact": "^10.20.1",
    "svgo": "^3.2.0",
    "type-fest": "^4.15.0",
    "typed-query-selector": "^2.11.1",
    "typescript": "5.4.4",
    "unimport": "^3.7.1",
    "unocss": "^0.59.2",
    "unocss-preset-animations": "^1.0.2",
    "unplugin": "^1.10.1",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.2.8",
    "web-ext": "^7.11.0"
  },
  "trustedDependencies": [
    "esbuild"
  ],
  "pnpm": {
    "overrides": {
      "@unocss/core": "^0.59.2",
      "css-tree": "~2.2.0",
      "eslint": "^9.0.0",
      "strip-literal": "^2.1.0",
      "unplugin": "^1.10.1",
      "vite": "^5.2.8"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "node-fetch"
      ],
      "allowAny": [
        "eslint"
      ]
    }
  }
}
