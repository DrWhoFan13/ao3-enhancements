{
  "name": "ao3-enhancements",
  "type": "module",
  "version": "0.5.0-alpha.1",
  "private": true,
  "description": "Firefox webextension: Various tweaks and enhancements for ArchiveOfOurOwn.org",
  "imports": {
    "#dom": "./src/common/dom.js",
    "#common": "./src/common/index.js",
    "#img/*": "./src/img/*",
    "#icons/*": "./src/icons/*",
    "#content_script/*": "./src/content_script/*"
  },
  "author": "jsmnbom",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build",
    "build:dev:firefox": "bun scripts/builder/build.ts -D --browser firefox build",
    "build:prod:firefox": "bun scripts/builder/build.ts --browser firefox build",
    "watch:dev:firefox": "bun scripts/builder/build.ts -D --browser firefox watch",
    "watch:prod:firefox": "bun scripts/builder/build.ts --browser firefox watch",
    "start:firefox": "web-ext --config=web-ext.firefox.cjs run",
    "dist:firefox": "web-ext --config=web-ext.firefox.js build  && mv $(jq -r \"\\\"dist/firefox/ao3_enhancements-\\\" + .version + \\\".zip\\\"\" build/firefox/manifest.json) $(jq -r \"\\\"dist/firefox/ao3_enhancements-\\\" + .version + \\\".zip\\\"\" package.json)",
    "dist:source": "mkdir -p dist/source && zip -r $(jq -r \"\\\"dist/source/ao3_enhancements-\\\" + .version + \\\".zip\\\"\" package.json) . -x \"build**\" -x \"dist**\" -x \"meta**\" -x \"node_modules**\" -x \".git**\" -x \".vscode**\""
  },
  "dependencies": {
    "@antfu/utils": "^0.7.7",
    "@iconify/json": "^2.2.196",
    "@unocss/reset": "^0.58.6",
    "@vueuse/core": "^10.9.0",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.6",
    "file-saver": "^2.0.5",
    "lzma": "^2.3.2",
    "object-path": "^0.11.5",
    "p-debounce": "^4.0.0",
    "p-queue": "^8.0.1",
    "pluralize": "^8.0.0",
    "query-string": "^9.0.0",
    "radix-vue": "^1.5.3",
    "rfdc": "^1.3.0",
    "serialize-error": "^11.0.3",
    "svg-tag-names": "^3.0.1",
    "tinycolor2": "^1.4.2",
    "trimerge": "^1.3.0-alpha.15",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@rollup/pluginutils": "^5.1.0",
    "@types/firefox-webext-browser": "^120.0.3",
    "@types/node": "^20.11.20",
    "@types/pluralize": "0.0.33",
    "@unocss/eslint-plugin": "^0.58.7",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "dot-prop": "^8.0.2",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "jiti": "^1.21.0",
    "parse5": "^7.1.2",
    "preact": "^10.20.1",
    "svgo": "^3.2.0",
    "type-fest": "^4.12.0",
    "typed-query-selector": "^2.11.1",
    "typescript": "5.4.2",
    "unocss": "^0.58.6",
    "unplugin": "^1.10.0",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue": "^5.0.5",
    "unplugin-vue-components": "^0.26.0",
    "web-ext": "mozilla/web-ext"
  },
  "trustedDependencies": [
    "esbuild"
  ],
  "pnpm": {
    "overrides": {
      "css-tree": "~2.2.0",
      "eslint": "^8.57.0",
      "unplugin": "^1.10.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": ["node-fetch"]
    }
  }
}
