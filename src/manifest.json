{
	"manifest_version": 2,
	"name": "AO3 Enhancements",
	"version": "0.1.0",
	"description": "Various tweaks and enhancements for ArchiveOfOurOwn.org",
	"author": "Jasmin Bom",
	"options_ui": {
		"page": "./options_ui/index.html",
		"browser_style": false
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.archiveofourown.org/*"
			],
			"js": [
				"./content_script/index.js"
			],
			"css": [
				"./content_script/style.css"
			],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": [
			"./background/index.js"
		]
	},
	"permissions": [
		"storage",
		"*://*.archiveofourown.org/*"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "ao3-enhancements@jsmnbom"
		}
	}
}