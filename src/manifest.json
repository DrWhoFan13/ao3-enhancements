{
	"manifest_version": 2,
	"name": "AO3 Enhancements",
	// Populated from package.json
	"version": "",
	"description": "Various tweaks and enhancements for ArchiveOfOurOwn.org",
	"author": "Jasmin Bom",
	"__firefox_icons__": {
		"48": "./icon.svg",
		"96": "./icon.svg"
	},
	"__chrome_icons__": {
		"48": "./icon-48.png",
		"96": "./icon-96.png",
		"128": "./icon-128.png"
	},
	"options_ui": {
		"page": "./options_ui/index.pug?entry",
		// Chrome uses non-standard key
		"__firefox_browser_style__": false,
		"__chrome_chrome_style__": false,
		// Looks better on mobile, and allows
		// us to link directly to the options from ao3
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.archiveofourown.org/*"
			],
			"__firefox_js__": [
				"./content_script/index.ts?entry"
			],
			"__chrome_js__": [
				"~file-loader?name=[name].[ext]!webextension-polyfill/dist/browser-polyfill.min.js",
				"./content_script/index.ts?entry"
			],
			"css": [
				"./content_script/style.css"
			],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		"./icon.svg",
		"./options_ui/index.pug?entry"
	],
	"permissions": [
		"storage",
		"*://*.archiveofourown.org/*"
	],
	"__firefox_browser_specific_settings__": {
		"gecko": {
			// Needed for proper storage
			"id": "ao3-enhancements@jsmnbom",
			// We need async functions (52)
			// Also options_ui on android (57)
			"strict_min_version": "57.0"
		}
	},
	// We need async functions (55)
	"__chrome_minimum_chrome_version__": "55"
}