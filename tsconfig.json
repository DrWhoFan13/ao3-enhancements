{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable",
    ],
    "types": [
      "vuetify",
      "firefox-webext-browser",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}